mixin footerLink(href, text)
  li
    a.footer__link(href=href) #{text}

mixin bottomFooterLink(href, text)
  li
    a.footer__bottom-link(href=href) #{text}

footer.footer
  .footer__body.container
    .footer__top
      a.footer__logo(href="#!")
        h6.footer__logo-title Cube
        span.footer__logo-text Интерьерные решения
      nav.footer__nav
        ul.footer__list
          +footerLink("#!", "Двери")
          +footerLink("#!", "Фурнитура")
          +footerLink("#!", "Напольные покрытия")
          +footerLink("#!", "Кухни")
          +footerLink("#!", "Мягкая мебель")
          +footerLink("#!", "Окна")
          +footerLink("#!", "Блог")
          +footerLink("#!", "Контакты")
      form.footer__search
        button.footer__search-button(type="button", aria-label="Нажмите, чтобы начать поиск", data-tippy-content="Поиск")
          span.icon-search
        input.footer__search-input(type="search", placeholder="Поиск")
    .footer__bottom
      strong.footer__copyright
        span Все материалы сайта cube.by принадлежат ООО "Арт Трейд Про".
        span Копиравание и скачивание без разрешения автора запрещены.
      nav.footer__bottom-nav
        ul.footer__bottom-list
          +bottomFooterLink("#!", "Обработка персональных данных")
          +bottomFooterLink("#!", "Политика конфиденциальности")
          +bottomFooterLink("#!", "Согласие с рассылкой")